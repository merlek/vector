{
   "name": "vector",
   "version": "1.0.0",
   "description": "vector function library",
   "main": "dist/vector.js",
   "types": "dist/vector.d.ts",
   "scripts": {
      "test": "karma start karma.conf.js",
      "test:watch": "npm run test -- --single-run false",
      "clean": "rm -rf dist",
      "start": "webpack-dev-server --watch --config webpack.dev.config.js",
      "build": "npm run build:dev",
      "build:dev": "npm run clean && npm run buildWebpack:dev",
      "build:prd": "npm run clean && npm run buildWebpack:prd",
      "buildWebpack:prd": "webpack --mode=production --config webpack.config.js",
      "buildWebpack:dev": "webpack --config webpack.dev.config.js",
      "lint": "tslint -p src/tsconfig.json",
      "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
      "prepare": "npm run build:prd",
      "prepublishOnly": "npm test && npm run lint",
      "preversion": "npm run lint",
      "version": "npm run format && npm run git-src && npm run build:prd && npm run git-dist",
      "postversion": "git push && git push --tags",
      "git-dist": "git add -A dist",
      "git-src": "git add -A src"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/merlek/vector.git"
   },
   "keywords": [
      "vector",
      "vectors",
      "math"
   ],
   "author": "merlek",
   "license": "MIT",
   "dependencies": {
      "@types/node": "^13.1.6",
      "utility-functions": "merlek/utility-functions#e7a909b"
   },
   "devDependencies": {
      "@types/jasmine": "^3.5.1",
      "karma": "^4.4.1",
      "karma-chrome-launcher": "^3.1.0",
      "karma-jasmine": "^3.1.0",
      "karma-spec-reporter": "0.0.32",
      "karma-webpack": "^5.0.0",
      "pre-commit": "^1.2.2",
      "prettier": "^1.19.1",
      "ts-loader": "^9.4.2",
      "ts-node": "^8.6.2",
      "tslint": "^5.20.1",
      "tslint-config-prettier": "^1.18.0",
      "typescript": "^3.7.5",
      "webpack": "^5.75.0",
      "webpack-cli": "^5.0.1",
      "webpack-dev-server": "^3.10.1"
   },
   "files": [
      "dist/**/*"
   ],
   "prettier": {
      "printWidth": 80,
      "singleQuote": true
   },
   "pre-commit": [
      "lint",
      "test",
      "build:prd",
      "git-dist"
   ]
}
